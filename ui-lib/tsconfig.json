{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@ui/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"]
    },
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/**/*.stories.tsx", "lib"]
}
