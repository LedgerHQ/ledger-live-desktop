{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "tsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@ui/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"]
    },
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/**/*.stories.tsx",
    "./scripts",
    "./lib"
  ]
}
